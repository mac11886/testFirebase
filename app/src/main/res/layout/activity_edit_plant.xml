<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantActivity">

    <ImageView
        android:id="@+id/editimageView"
        android:layout_width="159dp"
        android:layout_height="190dp"
        android:layout_marginTop="28dp"
        android:contentDescription="no image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/dateplantview"
        android:layout_width="184dp"
        android:layout_height="105dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/round_square"
        android:elevation="2dp"
        android:padding="16dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/explainView"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/headerView"
        android:layout_width="614dp"
        android:layout_height="114dp"
        android:background="@color/Green"
        android:padding="16dp"
        app:cornerRadius="100dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/datestartview"
        android:layout_width="184dp"
        android:layout_height="105dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/round_square"
        android:elevation="3dp"
        app:layout_constraintBottom_toTopOf="@+id/explainView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toEndOf="@+id/dateplantview" />

    <View
        android:id="@+id/explainView"
        android:layout_width="374dp"
        android:layout_height="197dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_square"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editimageView"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/infoplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Plant info"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/headerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <TextView
        android:id="@+id/datestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วันที่เริ่มปลูก"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/dateplantview"
        app:layout_constraintEnd_toEndOf="@+id/dateplantview"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/dateplantview"
        app:layout_constraintTop_toTopOf="@+id/dateplantview"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/datestart3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="คำอธิบายเพิ่มเติม"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="6dp"
        app:layout_constraintStart_toStartOf="@+id/explainView"
        app:layout_constraintTop_toTopOf="@+id/explainView" />

    <TextView
        android:id="@+id/datestart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วันที่เริ่มใช้แอพ"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/datestartview"
        app:layout_constraintEnd_toEndOf="@+id/datestartview"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/datestartview"
        app:layout_constraintTop_toTopOf="@+id/datestartview"
        app:layout_constraintVertical_bias="0.09" />

    <EditText
        android:id="@+id/editDateStart"
        android:layout_width="154dp"
        android:layout_height="42dp"
        android:layout_marginTop="35dp"
        android:elevation="2dp"
        android:ems="10"
        android:hint="enter date"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/dateplantview"
        app:layout_constraintEnd_toEndOf="@+id/dateplantview"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="@+id/dateplantview"
        app:layout_constraintTop_toTopOf="@+id/dateplantview" />

    <EditText
        android:id="@+id/editDatestartApp"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:elevation="3dp"
        android:ems="10"
        android:hint="enter date"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/datestartview"
        app:layout_constraintEnd_toEndOf="@+id/datestartview"
        app:layout_constraintStart_toStartOf="@+id/datestartview"
        app:layout_constraintTop_toTopOf="@+id/datestartview" />

    <EditText
        android:id="@+id/editAnnotation"
        android:layout_width="321dp"
        android:layout_height="98dp"
        android:layout_marginTop="16dp"
        android:elevation="3dp"
        android:ems="10"
        android:hint="enter annotation"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/explainView"
        app:layout_constraintEnd_toEndOf="@+id/explainView"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="@+id/explainView"
        app:layout_constraintTop_toTopOf="@+id/explainView"
        app:layout_constraintVertical_bias="0.313" />

    <EditText
        android:id="@+id/editNameplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="350dp"
        android:ems="10"
        android:hint="enter nameplant"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/explainView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editimageView" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <Button
        android:id="@+id/chooseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choosefile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <Button
        android:id="@+id/uploadbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279" />

</androidx.constraintlayout.widget.ConstraintLayout>