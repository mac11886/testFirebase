<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantActivity">

    <ImageView
        android:id="@+id/editimageView"
        android:layout_width="159dp"
        android:layout_height="190dp"
        android:layout_marginTop="44dp"
        android:contentDescription="no image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/plantnameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editimageView" />

    <View
        android:id="@+id/dateplantview"
        android:layout_width="169dp"
        android:layout_height="87dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/round_square"
        android:elevation="2dp"
        android:padding="16dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/explainView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantnameText" />

    <View
        android:id="@+id/headerView"
        android:layout_width="614dp"
        android:layout_height="114dp"
        android:background="@color/Green"
        android:padding="16dp"
        app:cornerRadius="100dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/datestartview"
        android:layout_width="169dp"
        android:layout_height="87dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_square"
        android:elevation="3dp"
        app:layout_constraintBottom_toTopOf="@+id/explainView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toEndOf="@+id/dateplantview"
        app:layout_constraintTop_toBottomOf="@+id/plantnameText" />

    <View
        android:id="@+id/explainView"
        android:layout_width="374dp"
        android:layout_height="197dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_square"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editimageView"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/infoplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant info"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/headerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วันที่เริ่มปลูก"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/dateplantview"
        app:layout_constraintEnd_toEndOf="@+id/dateplantview"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/dateplantview"
        app:layout_constraintTop_toTopOf="@+id/dateplantview"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/datestart3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="คำอธิบายเพิ่มเติม"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="6dp"
        app:layout_constraintStart_toStartOf="@+id/explainView"
        app:layout_constraintTop_toTopOf="@+id/explainView" />

    <TextView
        android:id="@+id/datestart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วันที่เริ่มใช้แอพ"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/datestartview"
        app:layout_constraintEnd_toEndOf="@+id/datestartview"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/datestartview"
        app:layout_constraintTop_toTopOf="@+id/datestartview"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/dateofplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="ดึงไฟเบส"
        android:translationZ="6dp"
        app:layout_constraintEnd_toEndOf="@+id/dateplantview"
        app:layout_constraintStart_toStartOf="@+id/dateplantview"
        app:layout_constraintTop_toTopOf="@+id/dateplantview" />

    <TextView
        android:id="@+id/infoanno"
        android:layout_width="318dp"
        android:layout_height="115dp"
        android:layout_marginTop="56dp"
        android:text="ดึงไฟเบส"
        android:translationZ="6dp"
        app:layout_constraintEnd_toEndOf="@+id/explainView"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/explainView"
        app:layout_constraintTop_toTopOf="@+id/explainView" />

    <TextView
        android:id="@+id/dateofstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="ดึงไฟเบส"
        android:translationZ="6dp"
        app:layout_constraintEnd_toEndOf="@+id/datestartview"
        app:layout_constraintStart_toStartOf="@+id/datestartview"
        app:layout_constraintTop_toTopOf="@+id/datestartview" />

    <Button
        android:id="@+id/getUrlBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="301dp" />
</androidx.constraintlayout.widget.ConstraintLayout>